//
// Force overly long spans of text to truncate, e.g.:
//
// `@include truncate(100%)`
//
// Where `$truncation-boundary` is a united measurement.
///
truncate($truncation-boundary)
    max-width:$truncation-boundary
    white-space:nowrap
    overflow:hidden
    text-overflow:ellipsis


//------------------------------------
//    $NIB FIXES
//------------------------------------
//

border-box
    -webkit-{prop} 
    -moz-{prop} 
    -ms-{prop} 
    -o-{prop} 
    {prop} 

//Margin-bottom mixin used in generic/shared
mixin-font(args)
    font: args

mixin-margin-bottom(args)
    margin-bottom: args

mixin-margin-left(args)
    margin-left: args

mixin-margin-right(args)
    margin-right: args

mixin-height(args)
    height args