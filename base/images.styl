/*------------------------------------*\
    IMAGES
\*------------------------------------*/
/**
 * Demo  jsfiddle.net/inuitcss/yMtur
 */
/**
 * Fluid images.
 */
img
    max-width 100%



/**
 * Non-fluid images if you specify `width` and/or `height` attributes.
 */
img[width],
img[height]
    max-width none



/**
 * Rounded images.
 */
.img--round  border-radius brand-round 


/**
 * Image placement variations.
 */
.img--right
    float right
    mixin-margin-left(base-line-height)
    mixin-margin-bottom(base-line-height)

.img--left
    float left
    mixin-margin-right(base-line-height)
    mixin-margin-bottom(base-line-height)

.img--center
    display block
    margin-left auto
    margin-right auto
    mixin-margin-bottom(base-line-height)




/**
 * Keep your images on your baseline.
 *
 * Please note, these will not work too nicely with fluid images and will
 * distort when resized below a certain width. Use with caution.
 */
.img--short
    mixin-height(base-line-height * 5)

.img--medium
     mixin-height(base-line-height * 10)

.img--tall
     mixin-height(base-line-height * 15)



/**
 * Images in `figure` elements.
 */
figure > img
    display block

